{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "composite": true,
        "declaration": true,
        "esModuleInterop": true,
        "incremental": true,
        "jsx": "react",
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "preserveWatchOutput": true,
        "resolveJsonModule": true,
        "rootDir": "src",
        "strict": true,
        "strictNullChecks": false,
        "target": "es2017",
        "outDir": "./lib",
        "lib": [
            "es6",
            "dom"
        ],
        "types": []
    },
    "include": [
        "src/*"
    ]
}